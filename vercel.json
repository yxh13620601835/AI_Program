{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/css/(.*)",
      "headers": { "content-type": "text/css" }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "DEEPSEEK_API_KEY": "${DEEPSEEK_API_KEY}",
    "DEEPSEEK_API_URL": "${DEEPSEEK_API_URL}"
  }
}